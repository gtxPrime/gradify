<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeCompanion"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.Stats"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CollegeCompanion">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Profile Activity -->
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.NotesActivity" />
        <activity android:name=".activities.PYQActivity" />
        <activity android:name=".activities.PYQQuestionActivity" />
        <activity android:name=".activities.ToolsActivity" />
        <activity
            android:name=".activities.DevelopersActivity"
            android:exported="false"
            android:label="Developers" />
        <activity
            android:name=".activities.LectureActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:exported="false" /> <!-- Subjects Activity -->
        <activity
            android:name=".activities.SubjectsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false" />
    </application>

</manifest>