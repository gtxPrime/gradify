<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDarkColor" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="12dp">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="12dp" android:height="6dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
            <item>
                <rotate android:fromDegrees="45" android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/white" />
                        <size android:width="8dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate android:fromDegrees="-45" android:toDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/white" />
                        <size android:width="8dp" android:height="2dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list> 