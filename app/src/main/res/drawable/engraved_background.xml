<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Main background with inset to create shadow effect -->
    <item android:bottom="2dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Inner shadow (top and left) -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A2E28" />
            <corners android:radius="11dp" />
        </shape>
    </item>
    
    <!-- Inner content area with slight gradient -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#20000000"
                android:endColor="#10000000"
                android:angle="270" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list> 