<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/firstSecondary" />
            <corners android:radius="8dp" />
            <stroke android:color="@color/secondSecondary" android:width="1dp" />
            <padding android:left="12dp" android:right="12dp" />
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="12dp">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <size android:width="10dp" android:height="2dp" />
                <solid android:color="@color/secondSecondary" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="end|center_vertical" android:right="12dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <size android:width="10dp" android:height="2dp" />
                <solid android:color="@color/secondSecondary" />
            </shape>
        </rotate>
    </item>
</layer-list> 