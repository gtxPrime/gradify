<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerPYQQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    tools:context=".activities.PYQQuestionActivity"
    tools:ignore="ContentDescription">

    <androidx.cardview.widget.CardView
        android:id="@+id/backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/back"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/textIcons" />

    </androidx.cardview.widget.CardView>

    <!-- Top Bar with Title and Timer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="@+id/backBtn">

        <TextView
            android:id="@+id/paperNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/kanit"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/textIcons"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/abortContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Abort Button Container -->
        <LinearLayout
            android:id="@+id/abortContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/timerLayout"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/abortImageButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/abort_quiz"
                android:src="@drawable/ic_warning"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/abortTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="@string/abort"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Timer Layout (visible only in exam mode) -->
        <LinearLayout
            android:id="@+id/timerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_cons"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:paddingBottom="6dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:src="@android:drawable/ic_menu_recent_history"
                app:tint="@color/textIcons" />

            <TextView
                android:id="@+id/timerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="00:00"
                android:textColor="@color/textIcons"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Progress Indicator -->
    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kanit"
        android:text="@string/question_1_20"
        android:textColor="@color/unselectedLevelText"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn" />

    <!-- Main Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/questionScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationLayout"
        app:layout_constraintTop_toBottomOf="@+id/progressTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Question Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/questionCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Question Mark and Text Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/questionMarksTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/heroCards"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textColor="@color/textIcons"
                            android:fontFamily="@font/kanit"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="+4 Marks" />

                        <TextView
                            android:id="@+id/questionTypeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="#F2EFE1"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textColor="@color/textIcons"
                            android:fontFamily="@font/kanit"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            tools:text="MCQ" />
                    </LinearLayout>

                    <!-- Question Text -->
                    <TextView
                        android:id="@+id/questionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/kanit"
                        android:textColor="@color/textIcons"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Sample question text would go here. It can be multiple lines." />

                    <!-- Question Image (if any) -->
                    <ImageView
                        android:id="@+id/questionImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        tools:ignore="ContentDescription" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Answer Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/answerCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/questionCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/select_answer"
                        android:textColor="@color/textIcons"
                        android:fontFamily="@font/kanit"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <!-- MCQ Options Container - Shown for MCQ type -->
                    <RadioGroup
                        android:id="@+id/singleChoiceGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <!-- Will be populated dynamically -->
                    </RadioGroup>

                    <!-- Multiple Choice Container - Shown for multiple answer MCQ type -->
                    <LinearLayout
                        android:id="@+id/multipleChoiceGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <!-- Will be populated dynamically -->
                    </LinearLayout>

                    <!-- Text Input Container - Shown for text type questions -->
                    <LinearLayout
                        android:id="@+id/textInputGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_your_answer"
                            android:textColorHint="@color/unselectedLevelText"
                            app:boxBackgroundColor="@color/mainBg"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/textIcons">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/answerEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:textColor="@color/textIcons"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Submission Result Container - Shown in practice mode after submission -->
            <androidx.cardview.widget.CardView
                android:id="@+id/resultCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/answerCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/resultTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/correct"
                        android:fontFamily="@font/kanit"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/correctAnswerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/kanit"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/explanationTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/kanit"
                        android:textColor="@color/unselectedLevelText"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation (Next/Previous Buttons) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/previousButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/textIcons"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit"
            android:textColor="@color/heroCards"
            android:textSize="14sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_before"
            app:iconTint="@color/heroCards"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/textIcons"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/check"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit"
            android:textColor="@color/heroCards"
            android:textSize="14sp"
            android:visibility="gone"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nextButton"
            app:layout_constraintStart_toEndOf="@+id/previousButton"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/textIcons"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/next"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit"
            android:textColor="@color/heroCards"
            android:textSize="14sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_next"
            app:iconGravity="end"
            app:iconTint="@color/heroCards"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkButton"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitQuizButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/textIcons"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/submit_quiz"
            android:textAllCaps="false"
            android:fontFamily="@font/kanit"
            android:textColor="@color/heroCards"
            android:textSize="18sp"
            android:visibility="gone"
            app:cornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Floating Action Button for Extra Info -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extraInfoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/view_extra_information"
        android:src="@drawable/ic_info"
        android:visibility="gone"
        app:backgroundTint="@color/textIcons"
        app:layout_constraintBottom_toTopOf="@+id/navigationLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/heroCards" />

</androidx.constraintlayout.widget.ConstraintLayout> 