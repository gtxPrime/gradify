<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_developers_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    tools:context=".activities.DevelopersActivity">

    <!-- Top Bar with Back Button and Title -->
    <androidx.cardview.widget.CardView
        android:id="@+id/backBtnCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/back"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:tint="@color/textIcons" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_developers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/kanit"
        android:text="@string/developers"
        android:textColor="@color/textIcons"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/backBtnCard"
        app:layout_constraintStart_toEndOf="@+id/backBtnCard"
        app:layout_constraintTop_toTopOf="@+id/backBtnCard" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtnCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Garvit Sharma Hero Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_garvit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/heroCards"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_garvit_pfp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile_placeholder"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                    <TextView
                        android:id="@+id/tv_garvit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/garvit_sharma"
                        android:textColor="@color/textIcons"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_garvit_pfp" />

                    <TextView
                        android:id="@+id/tv_garvit_role"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:alpha="0.8"
                        android:fontFamily="@font/kanit"
                        android:text="@string/head_dev_info"
                        android:textAlignment="center"
                        android:textColor="@color/textIcons"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_garvit_name" />

                    <LinearLayout
                        android:id="@+id/layout_garvit_social"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_garvit_role">

                        <ImageButton
                            android:id="@+id/btn_garvit_github"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="#40FFFFFF"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_github"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_garvit_linkedin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="#40FFFFFF"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_linkedin"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_garvit_instagram"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="#40FFFFFF"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_insta"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_garvit_telegram"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="#40FFFFFF"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_telegram"
                            app:tint="@color/textIcons" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_contributors_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/kanit"
                android:text="@string/key_contributors"
                android:textColor="@color/textIcons"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Contributor 1 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_contributor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_contributor1_pfp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile_placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                    <TextView
                        android:id="@+id/tv_contributor1_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/dev1"
                        android:textColor="@color/textIcons"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_contributor1_pfp"
                        app:layout_constraintTop_toTopOf="@id/img_contributor1_pfp" />

                    <TextView
                        android:id="@+id/tv_contributor1_role"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:alpha="0.7"
                        android:fontFamily="@font/kanit"
                        android:text="@string/dev2_info"
                        android:textColor="@color/textIcons"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_contributor1_pfp"
                        app:layout_constraintTop_toBottomOf="@id/tv_contributor1_name" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toEndOf="@id/img_contributor1_pfp"
                        app:layout_constraintTop_toBottomOf="@id/tv_contributor1_role">

                        <ImageButton
                            android:id="@+id/btn_contributor1_github"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/mainBg"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_github"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_contributor1_linkedin"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/mainBg"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_linkedin"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_contributor1_other"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/mainBg"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_insta"
                            app:tint="@color/textIcons" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contributor 2 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_contributor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_contributor2_pfp"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile_placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                    <TextView
                        android:id="@+id/tv_contributor2_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/shashwat_upadhyay"
                        android:textColor="@color/textIcons"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_contributor2_pfp"
                        app:layout_constraintTop_toTopOf="@id/img_contributor2_pfp" />

                    <TextView
                        android:id="@+id/tv_contributor2_role"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:alpha="0.7"
                        android:fontFamily="@font/kanit"
                        android:text="@string/dev3_info"
                        android:textColor="@color/textIcons"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/img_contributor2_pfp"
                        app:layout_constraintTop_toBottomOf="@id/tv_contributor2_name" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toEndOf="@id/img_contributor2_pfp"
                        app:layout_constraintTop_toBottomOf="@id/tv_contributor2_role">

                        <ImageButton
                            android:id="@+id/btn_contributor2_github"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/mainBg"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_github"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_contributor2_linkedin"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/mainBg"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_linkedin"
                            app:tint="@color/textIcons" />

                        <ImageButton
                            android:id="@+id/btn_contributor2_other"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/oval_cons"
                            android:backgroundTint="@color/mainBg"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_insta"
                            app:tint="@color/textIcons" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>