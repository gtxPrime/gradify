<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.SettingsActivity"
    tools:ignore="ContentDescription">

    <!-- Decorative Top Arc -->
    <ImageView
        android:id="@+id/settingsDecor1"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_marginTop="-260dp"
        android:alpha="0.8"
        android:contentDescription="@string/decor"
        android:src="@drawable/oval_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settingsDecor2"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="-230dp"
        android:alpha="0.8"
        android:contentDescription="@string/decor"
        android:src="@drawable/oval_gradient2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/settingsDecor3"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_marginStart="-270dp"
        android:layout_marginBottom="80dp"
        android:alpha="0.6"
        android:contentDescription="@string/decor"
        android:src="@drawable/oval_gradient3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bgImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Decorative Top Arc -->

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/inter18regular"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Theme Section -->
            <TextView
                android:id="@+id/themeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter18regular"
                android:text="@string/theme"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Primary Color Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/primaryColorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="10dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/primaryColorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/primary_color"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/primaryColorPreview"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/primaryColor"
                    android:padding="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Secondary Color Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/secondaryColorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/fui_transparent"
                android:elevation="10dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/secondaryColorLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secondary_color"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/secondaryColorPreview"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="@color/secondaryColor"
                    android:padding="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/themeToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/skyLightThemeButton"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/toggle_button_bg"
                    android:text="@string/sky_light"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/edgeFlareThemeButton"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/toggle_button_bg"
                    android:text="@string/edge_flare"
                    android:textColor="@color/white" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:id="@+id/resetToDefaultColors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:text="Change to default"
                android:textColor="?attr/colorPrimary" 
                android:textSize="16sp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

            <LinearLayout
                android:id="@+id/gradientColorsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"> <!-- Initially hidden -->

                <!-- Gradient 1 Color Section -->
                <RelativeLayout
                    android:id="@+id/gradient1ColorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/oval_cons_settings_item"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/gradient1ColorLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/gradient_1_color"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/gradient1ColorPreview"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/ga1"
                        app:shapeAppearanceOverlay="@style/circleImageView" /> <!-- Example, replace with actual gradient color -->
                </RelativeLayout>

                <!-- Gradient 2 Color Section -->
                <RelativeLayout
                    android:id="@+id/gradient2ColorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/oval_cons_settings_item"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/gradient2ColorLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/gradient_2_color"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/gradient2ColorPreview"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/ga2"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                </RelativeLayout>

                <!-- Gradient 3 Color Section -->
                <RelativeLayout
                    android:id="@+id/gradient3ColorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/oval_cons_settings_item"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/gradient3ColorLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/gradient_3_color"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/gradient3ColorPreview"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/ga3"
                        app:shapeAppearanceOverlay="@style/circleImageView" /> <!-- Example, replace with actual gradient color -->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skyLightGradientPickerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"> <!-- Initially hidden -->

                <RelativeLayout
                    android:id="@+id/skyLightColorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/oval_cons_settings_item"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/skylightText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/color"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/skyLightColorPreview"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:shapeAppearanceOverlay="@style/circleImageView"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/ga3" /> <!-- Example, replace with actual gradient color -->
                </RelativeLayout>
            </LinearLayout>

            <!-- AI Section -->
            <TextView
                android:id="@+id/aiSectionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter18regular"
                android:text="@string/ai_settings"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- API Key -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/apiKeyHolder"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/gemini_api_key"
                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/primaryColor"
                app:hintTextColor="@color/primaryColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apiKeyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/apiKeyTutorialLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="@string/how_to_get_api_key"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/editApiKeyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:alpha="0.7"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>


            <!-- Message History -->
            <TextView
                android:id="@+id/messageHistoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter18regular"
                android:text="@string/message_history"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.slider.Slider
                    android:id="@+id/messageHistorySlider"
                    android:layout_width="0dp"
                    app:thumbColor="@color/ga1"
                    app:trackColorActive="@color/ga1"
                    app:trackColorInactive="#003531"
                    android:layout_height="wrap_content"
                    app:tickColor="@color/white"
                    android:layout_weight="1"
                    android:stepSize="1"
                    android:value="3"
                    android:valueFrom="0"
                    android:valueTo="5"
                    app:labelBehavior="gone" />

                <TextView
                    android:id="@+id/messageHistoryValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/sendWholeHistoryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/send_whole_history"
                android:textColor="@color/white"
                app:buttonTint="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/historyMeaningLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="@string/meaning_prompt"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/historyMeaningText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/history_meaning_explanation"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Other Settings Section -->
            <TextView
                android:id="@+id/otherSettingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter18regular"
                android:text="@string/other_settings"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Strict Exam Mode -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/strictExamModeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/strict_exam_mode"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:thumbTint="@color/white"
                app:trackTint="@color/primaryColor" />

            <!-- Focus Mode -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/focusModeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/focus_mode"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:thumbTint="@color/white"
                app:trackTint="@color/primaryColor" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout> 