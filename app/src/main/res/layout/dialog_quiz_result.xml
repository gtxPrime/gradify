<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="ContentDescription">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit"
            android:text="@string/quiz_results"
            android:textAllCaps="true"
            android:textColor="@color/textIcons"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/resultIconImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_info"
            app:tint="@color/textIcons" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kanit"
            android:gravity="center"
            android:text="@string/your_score"
            android:textColor="@color/unselectedLevelText"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="@string/_0"
                android:textColor="@color/textIcons"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="@string/_100"
                android:textColor="@color/unselectedLevelText"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/percentageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/kanit"
            android:gravity="center"
            android:textColor="@color/textIcons"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feedbackTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/kanit"
            android:gravity="center"
            android:textColor="@color/unselectedLevelText"
            android:textSize="14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/questionSummaryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reviewButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/textIcons"
                android:fontFamily="@font/kanit"
                android:text="@string/review_answers"
                android:textAllCaps="false"
                android:textColor="@color/heroCards"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/emailPillBg"
                android:fontFamily="@font/kanit"
                android:text="@string/close_exam"
                android:textAllCaps="false"
                android:textColor="@color/textIcons"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 