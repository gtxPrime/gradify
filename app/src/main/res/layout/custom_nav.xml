<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customNavDrawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/bg_gre"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Section (Example) -->
        <LinearLayout
            android:id="@+id/nav_profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_border_drawer"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/nav_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/profile_picture"
                android:src="@drawable/ic_profile_placeholder"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:strokeColor="@color/primaryColor" />

            <TextView
                android:id="@+id/nav_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Navigation Item: Settings -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/settings"
                android:src="@drawable/settings"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Navigation Item: GAA Answers -->
        <LinearLayout
            android:id="@+id/nav_gaa_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/gaa_answers"
                android:src="@drawable/ic_pdf"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/gaa_answers"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Navigation Item: Exam Dates -->
        <LinearLayout
            android:id="@+id/nav_exam_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/exam_dates"
                android:src="@drawable/ic_date"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/exam_dates"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/nav_exam_dates_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                app:tint="@color/white"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <!-- Expandable Exam Details Layout -->
        <LinearLayout
            android:id="@+id/exam_dates_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingStart="40dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:id="@+id/exam_timers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Q1 Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q1: Time Left"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/q1_timer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/q1_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 13 July 2025"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- Q2 Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q2: Time Left"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/q2_timer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/q2_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 3 Aug 2025"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </LinearLayout>

                <!-- ET Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ET: Time Left"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/et_timer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/et_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 31 Aug 2025"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/enable_auto_time_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_auto_timezone"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Navigation Item: Paradox -->
        <LinearLayout
            android:id="@+id/nav_paradox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/paradox"
                android:src="@drawable/ic_fastfood"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/paradox"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Navigation Item: Margazhi -->
        <LinearLayout
            android:id="@+id/nav_Margazhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/margazhi"
                android:src="@drawable/ic_computer"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/margazhi"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Navigation Item: Contribute -->
        <LinearLayout
            android:id="@+id/nav_contribute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/contribute"
                android:src="@drawable/ic_handshake"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/contribute"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Navigation Item: Developers -->
        <LinearLayout
            android:id="@+id/nav_developers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/developers"
                android:src="@drawable/ic_pin"
                app:tint="@color/white" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/developers"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Spacer to push logout and donation to the bottom -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Navigation Item: Donation -->
        <LinearLayout
            android:id="@+id/nav_donation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/donation"
                android:src="@drawable/ic_handshake"
                app:tint="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/donation"
                android:textColor="@color/green"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Navigation Item: Logout -->
        <LinearLayout
            android:id="@+id/nav_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/nav_logout_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/logout"
                android:src="@android:drawable/ic_lock_power_off"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/nav_logout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Logout"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>