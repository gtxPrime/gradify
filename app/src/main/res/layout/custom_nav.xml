<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customNavDrawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@drawable/nav_drawer_background"
    android:elevation="10dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Profile Section -->
        <LinearLayout
            android:id="@+id/nav_profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/card_background_light">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/nav_profile_image"
                android:layout_width="55dp"
                android:padding="4dp"
                android:layout_height="55dp"
                android:contentDescription="@string/profile_picture"
                android:src="@drawable/ic_profile_placeholder"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:strokeColor="@color/textIcons"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/nav_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/kanit"
                android:textColor="@color/textIcons"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Navigation Item: Settings -->
                <LinearLayout
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/settings"
                        android:src="@drawable/settings"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/settings"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Navigation Item: Exam Dates -->
                <LinearLayout
                    android:id="@+id/nav_exam_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/exam_dates"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/kanit"
                        android:text="@string/exam_dates"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/nav_exam_dates_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/textIcons" />
                </LinearLayout>

                <!-- Expandable Exam Details Layout -->
                <LinearLayout
                    android:id="@+id/exam_dates_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="40dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/exam_timers_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Q1 Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Q1: Time Left"
                                android:textColor="@color/textIcons"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/q1_timer_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Calculating..."
                                android:textColor="@color/textIcons"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/q1_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Date: 13 July 2025"
                                android:textColor="@color/unselectedLevelText"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Q2 Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Q2: Time Left"
                                android:textColor="@color/textIcons"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/q2_timer_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Calculating..."
                                android:textColor="@color/textIcons"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/q2_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Date: 3 Aug 2025"
                                android:textColor="@color/unselectedLevelText"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- ET Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="ET: Time Left"
                                android:textColor="@color/textIcons"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/et_timer_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Calculating..."
                                android:textColor="@color/textIcons"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/et_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit"
                                android:text="Date: 31 Aug 2025"
                                android:textColor="@color/unselectedLevelText"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/enable_auto_time_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/heroCards"
                        android:fontFamily="@font/kanit"
                        android:text="@string/enable_auto_timezone"
                        android:textAllCaps="false"
                        android:textColor="@color/textIcons"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Navigation Item: Paradox -->
                <LinearLayout
                    android:id="@+id/nav_paradox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/paradox"
                        android:src="@drawable/ic_martini"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/paradox"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Navigation Item: Margazhi -->
                <LinearLayout
                    android:id="@+id/nav_Margazhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/margazhi"
                        android:src="@drawable/ic_gamepad"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/margazhi"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Navigation Item: Contribute -->
                <LinearLayout
                    android:id="@+id/nav_contribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/contribute"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/contribute"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Navigation Item: Developers -->
                <LinearLayout
                    android:id="@+id/nav_developers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="@string/developers"
                        android:src="@drawable/ic_circle_pile"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="@string/developers"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Navigation Item: GitHub -->
                <LinearLayout
                    android:id="@+id/nav_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/nav_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="GitHub"
                        android:src="@drawable/ic_github"
                        app:tint="@color/textIcons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/kanit"
                        android:text="GitHub"
                        android:textColor="@color/textIcons"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/dividerColor" />

        <!-- Logout & Donation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Navigation Item: Donation -->
            <LinearLayout
                android:id="@+id/nav_donation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/donation"
                    android:src="@drawable/ic_indian_rupee"
                    app:tint="@color/green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/kanit"
                    android:text="@string/donation"
                    android:textColor="@color/green"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Navigation Item: Logout -->
            <LinearLayout
                android:id="@+id/nav_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/nav_logout_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/logout"
                    android:src="@drawable/ic_logout"
                    app:tint="@color/red" />

                <TextView
                    android:id="@+id/nav_logout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/kanit"
                    android:text="Logout"
                    android:textColor="@color/red"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>