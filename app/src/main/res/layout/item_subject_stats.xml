<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:id="@+id/subjectStatsHolder"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/primaryColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/white"
            tools:text="Subject Name (e.g., Mathematics)" />

        <!-- PYQ Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.9"
                android:text="PYQs Solved:"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_view_pyq_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:alpha="0.9"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/white"
                tools:text="2h 30m" />
        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar_pyq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:trackCornerRadius="4dp"
            tools:progress="60" />

        <!-- Lecture Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.9"
                android:text="Lectures Watched:"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_view_lecture_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:alpha="0.9"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/white"
                tools:text="5h 15m" />
        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackColor="?attr/colorSecondaryContainer"
            app:trackCornerRadius="4dp"
            tools:progress="75" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 