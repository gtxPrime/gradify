<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    android:fitsSystemWindows="false"
    tools:context=".activities.Stats">

    <!-- Top Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="50dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtnS"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/white_circle_bg"
            android:contentDescription="@string/back"
            android:elevation="2dp"
            android:padding="8dp"
            android:src="@drawable/ic_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/textIcons" />

        <TextView
            android:id="@+id/pyqTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/kanit"
            android:text="@string/stats"
            android:textColor="@color/textIcons"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/backBtnS"
            app:layout_constraintStart_toEndOf="@+id/backBtnS"
            app:layout_constraintTop_toTopOf="@+id/backBtnS" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_selector_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/segmented_background"
        android:backgroundTint="@color/emailPillBg"
        android:elevation="2dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_nav">

        <View
            android:id="@+id/tab_indicator_stats"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/segmented_item_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/button_daily_view_toggle"
            app:layout_constraintStart_toStartOf="@id/button_daily_view_toggle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_daily_view_toggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Daily"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_weekly_view_toggle"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_weekly_view_toggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Weekly"
            android:textColor="@color/unselectedLevelText"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_monthly_view_toggle"
            app:layout_constraintStart_toEndOf="@+id/button_daily_view_toggle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_monthly_view_toggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Monthly"
            android:textColor="@color/unselectedLevelText"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_weekly_view_toggle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_view_selected_month"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/date_nav_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_selector_container">

        <ImageView
            android:id="@+id/button_previous_day"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_left"
            app:tint="@color/textIcons" />

        <TextView
            android:id="@+id/selectedDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/inter18regular"
            android:text="Feb 11"
            android:textColor="@color/textIcons"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_next_day"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_right"
            app:tint="@color/textIcons" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/pieChartHolder"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@+id/date_nav_row">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/custom_pie_chart_stats"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeNumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit"
                android:text="6.5h"
                android:textColor="@color/textIcons"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter18regular"
                android:letterSpacing="0.1"
                android:text="STUDIED"
                android:textColor="@color/unselectedLevelText"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/graph_placeholder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_data_for_this_period"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="@color/textIcons"
            android:visibility="gone" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_daily_subject_stats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pieChartHolder"
        tools:listitem="@layout/item_subject_stats" />


</androidx.constraintlayout.widget.ConstraintLayout>