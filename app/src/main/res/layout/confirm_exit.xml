<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="ContentDescription">

        <TextView
            android:id="@+id/dialogHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit"
            android:text="@string/quit"
            android:textAllCaps="true"
            android:textColor="@color/textIcons"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kanit"
            android:gravity="center"
            android:text="@string/are_you_sure_you_wanna_quit"
            android:textColor="@color/unselectedLevelText"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/emailPillBg"
                android:fontFamily="@font/kanit"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/textIcons"
                app:cornerRadius="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitExitButton"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:backgroundTint="@color/textIcons"
                android:fontFamily="@font/kanit"
                android:text="@string/submit_and_exit"
                android:textAllCaps="false"
                android:textColor="@color/heroCards"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>